{
  "author": "Mozilla IoT",
  "description": "Pulse adapter plugin for Mozilla WebThings Gateway",
  "gateway_specific_settings": {
    "webthings": {
      "exec": "{nodeLoader} {path}",
      "primary_type": "adapter",
      "strict_max_version": "*",
      "strict_min_version": "0.10.0"
    }
  },
  "homepage_url": "https://github.com/mozilla-iot/pulse-adapter",
  "id": "pulse-adapter",
  "license": "MPL-2.0",
  "manifest_version": 1,
  "name": "Pulse",
  "options": {
    "default": {
      "pulses": []
    },
    "schema": {
      "type": "object",
      "properties": {
        "pulses": {
          "type": "array",
          "items": {
            "type": "object",
            "required": [
              "name",
              "duration"
            ],
            "properties": {
              "name": {
                "type": "string",
                "description": "Name of pulse"
              },
              "duration": {
                "type": "number",
                "description": "Duration of pulse in seconds"
              },
              "invert": {
                "type": "boolean",
                "description": "Invert pulse such that it goes off->on, rather than on->off, after duration"
              },
              "extendOnRetrigger": {
                "type": "boolean",
                "description": "Extend the pulse if it is retriggered while active"
              }
            }
          }
        }
      }
    }
  },
  "short_name": "Pulse",
  "version": "0.4.0"
}
